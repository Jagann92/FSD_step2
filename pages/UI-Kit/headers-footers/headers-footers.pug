extends ../../../library/templates/base.pug
block title
	title "UI Kit: Headers&Footers"
block styles
	link(rel="stylesheet" href="headers-footers.css")
block body
	.page
		img.page__logo(src="../../../src/img/logo.svg")
		.page__container
			.header
				header.header__wrapper
					img.header__logo(src="../../../src/img/logo and title.svg")
					+menu('header')
					.header__buttons
						+button('Войти','white','normal',0)
						+button('Зарегистрироваться','purple','wide',0)
			.header
				header.header__wrapper
					img.header__logo(src="../../../src/img/logo and title.svg")
					+menu('header')
					a.header__link Юлий Цезарь
			.footer
				footer.footer__wrapper.footer_full
					.footer__logoandtext.footer__logoandtext_start
						img(src="../../../src/img/logo and title.svg")
						p.footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
					nav.menu.footer__menu
						- var f_menu = ['Навигация', 'О нас', 'Новости', 'Служба поддержки', 'Услуги', 'О нас', 'О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы', 'Служба поддержки', 'Соглашения', 'Сообщества', 'Связь с нами']
						each val, index in f_menu
							case index
								when 0
									a.menu__elem.menu__elem_title= val
								when 5
									a.menu__elem.menu__elem_title= val
								when 10
									a.menu__elem.menu__elem_title= val
								default
									a.menu__elem= val
					form.form.footer__form
						.form__title Подписка
						p.form__text Получайте специальные предложения и новости сервиса
						.form__text-submit.input
							input(type='email' placeholder='Your email adress').input__textfield
							input(type='image' src='../../../src/img/arrow_forward.svg').input__submit
					.footer__copyright 
						p Copyright © 2018 Toxin отель. Все права зачищены.
						.social
							img(src="../../../src/img/twitter.svg")
							img(src="../../../src/img/facebook.svg")
							img(src="../../../src/img/instagram.svg")
			.footer
				footer.footer__wrapper.footer_min
					.footer__logoandtext.footer__logoandtext_center
						img(src="../../../src/img/logo and title.svg")
						p.footer__text Copyright © 2018 Toxin отель. Все права зачищены.
					.social
						img(src="../../../src/img/twitter.svg")
						img(src="../../../src/img/facebook.svg")
						img(src="../../../src/img/instagram.svg")