extends ../../../library/templates/base.pug
block title
	title "UI Kit: Form elements"
block styles
	link(rel="stylesheet" href="form-elements.css")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js")

block body
	.page
		img.page__logo(src="../../../src/img/logo.svg")
		.page__container
			.page__block
				.element
					.element__head
						span.element__title text field
						span.element__subtitle.element__subtitle_end Default
					.element__body
						input.textfield(type="email" placeholder="Email")
				.element
					.element__head
						span.element__title text field
						span.element__subtitle.element__subtitle_end Hover/Focus
					.element__body
						input.textfield.textfield_focus(type="text" value="This is a pretty awesome" placeholder="Text")
				.element
					.element__head
						span.element__title dropdown
						span.element__subtitle.element__subtitle_end Default
					.element__body
						.iqdropdown.people.no-buttons.textfield
							p.iqdropdown-selection
							.iqdropdown-menu
								.iqdropdown-menu-option(data-id="adults")
									div
										p.iqdropdown-item Взрослые
								.iqdropdown-menu-option(data-id="childs")
									div
										p.iqdropdown-item Дети
								.iqdropdown-menu-option(data-id="babies")
									div
										p.iqdropdown-item Младенцы
				.element
					.element__head
						span.element__title Masked text field
						span.element__subtitle.element__subtitle_end Default
					.element__body
						input.textfield.textfield_masked(type="text" data-inputmask="'alias': 'datetime'" data-inputmask-inputFormat="dd/mm/yyyy" data-inputmask-clearmaskonlostfocus="false" data-inputmask-placeholder="ДД.ММ.ГГГГ")
				.element
					.element__head
						span.element__title date dropdown
					.element__body
						.date.textfield
							input.date__input.datepicker-here(type="text" id="date-1" data-date-format="dd/mm/yyyy" data-clear-button="true" data-apply-button="true"  placeholder="ДД.ММ.ГГГГ")
							button.date__arrow
				.element
					.element__head
						span.element__title date dropdown
					.element__body
						.date.textfield
							input.date__input.datepicker-here(type="text" id="date-2" data-date-format="dd/mm/yyyy" data-clear-button="true" data-apply-button="true"  placeholder="ДД.ММ.ГГГГ")
							button.date__arrow
				.element
					.element__head
						span.element__title filter date dropdown
					.element__body
						.date.textfield
							input.date__input.datepicker-here(type="text" id="date-3" data-date-format="dd M" data-range="true" data-clear-button="true" data-apply-button="true"   data-multiple-dates-separator=" - " placeholder="ДД.ММ.ГГГГ")
							button.date__arrow
				.element
					.element__head
						span.element__title subscription text field
					.element__body
						.subscribe
							input(type='email' placeholder='Email').textfield.subscribe__input
							span.material-icons.arrow.subscribe__arrow arrow_forward
			.page__block
				.element
					.element__head
						span.element__title checkbox buttons
					ul.element__body
						li
							input.checkbox(id ="c1" type="checkbox")
							label(for="c1") Можно курить
						li
							input.checkbox(id="c2" type="checkbox" checked)
							label(for="c2") Можно с питомцами
						li
							input.checkbox(id="c3" type="checkbox" checked)
							label(for="c3") Можно пригласить гостей (до 10 человек)
				.element
					.element__head
						span.element__title radio buttons
					.element__body
						input.radio(name="gender" id="r1" type="radio" checked)
						label(for="r1") Мужчина
						input.radio(name="gender" id="r2" type="radio")
						label(for="r2") Женщина
				.element
					.element__head
						span.element__title toggle
					ul.element__body
						li
							input.switch(id="sw1" type="checkbox" checked)
							label(for="sw1") Получать спецпредложения
						li
							input.switch(id="sw2" type="checkbox" checked)
							label(for="sw2") Получать спецпредложения
				.element
					.element__head
						span.element__title like button
					.element__body
						button.like(id="like-1")
							span.material-icons.like__heart
							span.like__count 2
						button.like(id="like-2").like_liked
							span.material-icons.like__heart
							span.like__count 12
				.element
					.element__head
						span.element__title rate button
					br
					.element__stars
						input.star-input(id="star-5-1" type="radio" name="reviewStars-1")
						label.material-icons.element__star-label(for="star-5-1")
						input.star-input(id="star-4-1" type="radio" name="reviewStars-1" checked)
						label.material-icons.element__star-label(for="star-4-1")
						input.star-input(id="star-3-1" type="radio" name="reviewStars-1")
						label.material-icons.element__star-label(for="star-3-1")
						input.star-input(id="star-2-1" type="radio" name="reviewStars-1")
						label.material-icons.element__star-label(for="star-2-1")
						input.star-input(id="star-1-1" type="radio" name="reviewStars-1")
						label.material-icons.element__star-label(for="star-1-1")
					.element__stars
						input.star-input(id="star-5" type="radio" name="reviewStars-2" checked)
						label.material-icons.element__star-label(for="star-5")
						input.star-input(id="star-4" type="radio" name="reviewStars-2")
						label.material-icons.element__star-label(for="star-4")
						input.star-input(id="star-3" type="radio" name="reviewStars-2")
						label.material-icons.element__star-label(for="star-3")
						input.star-input(id="star-2" type="radio" name="reviewStars-2")
						label.material-icons.element__star-label(for="star-2")
						input.star-input(id="star-1" type="radio" name="reviewStars-2")
						label.material-icons.element__star-label(for="star-1")
			.page__block
				.element.element__range
					.element__head
						span.element__title range slider
						span.element__subtitle.element__subtitle_end 5000Р-10 000р
					input(type="text" name="my_range" value="").js-range-slider
				.element
					.element__head
						span.element__title buttons
					button.button.button_purple.button_demo Click Me
					button.button.button_purple.button_locked.button_demo Click Me
					button.button.button_white.button_demo Click Me
					button.button.button_white.button_locked.button_demo Click Me
					br
					button.button.button_text.button_demo Click Me
					button.button.button_text.button_text_gray.button_demo Click Me
					button.button.button_purple.button_wide.button_arrowed.button_demo Перейти к оплате
						span.material-icons.arrow.button__arrow arrow_forward
				.element
					.element__head
						span.element__title Pagination
					.pagination
						a.pagination__elem.pagination__elem_current 1
						a.pagination__elem 2
						a.pagination__elem 3
						a.pagination__elem ...
						a.pagination__elem 15
						a.pagination__elem.material-icons.pagination__arrow arrow_forward
						span.pagination__text 1 – 12 из 100+ вариантов аренды
			.page__block
				.element
					.element__head
						span.element__title dropdown
						span.element__subtitle.element__subtitle_end Default
					.iqdropdown.beds
						p.iqdropdown-selection
						.iqdropdown-menu
							.iqdropdown-menu-option(data-id="bedrooms" data-defaultcount="2")
								div
									p.iqdropdown-item Спальни
							.iqdropdown-menu-option(data-id="beds" data-defaultcount="2")
								div
									p.iqdropdown-item Кровати
							.iqdropdown-menu-option(data-id="bathrooms")
								div
									p.iqdropdown-item Ванные комнаты
				.element
					.element__head
						span.element__title dropdown
						span.element__subtitle.element__subtitle_end Expanded
					.iqdropdown.beds.menu-open
						p.iqdropdown-selection
						.iqdropdown-menu
							.iqdropdown-menu-option(data-id="bedrooms" data-defaultcount="2")
								div
									p.iqdropdown-item Спальни
							.iqdropdown-menu-option(data-id="beds" data-defaultcount="2")
								div
									p.iqdropdown-item Кровати
							.iqdropdown-menu-option(data-id="bathrooms")
								div
									p.iqdropdown-item Ванные комнаты
				.element
					details.details.marginTop150
						summary.element__title expandable checkbox list
						ul
							li.details__checkbox
								input.checkbox(type="checkbox")
								span.element__subtitle Завтрак
							li.details__checkbox
								input.checkbox(type="checkbox" checked)
								span.element__subtitle Письменный стол
							li.details__checkbox
								input.checkbox(type="checkbox" checked)
								span.element__subtitle Стул для кормления
							li.details__checkbox
								input.checkbox(type="checkbox" checked)
								span.element__subtitle Кроватка
							li.details__checkbox
								input.checkbox(type="checkbox")
								span.element__subtitle Телевизор
							li.details__checkbox
								input.checkbox(type="checkbox")
								span.element__subtitle Шампунь
							li.details__checkbox
								input.checkbox(type="checkbox")
								span.element__subtitle Телевизор
							li.details__checkbox
								input.checkbox(type="checkbox")
								span.element__subtitle Шампунь
				.element
					details(open).details
						summary.element__title expandable checkbox list
						ul
							li.details__checkbox
								input.checkbox(type="checkbox")
								span.element__subtitle Завтрак
							li.details__checkbox
								input.checkbox(type="checkbox" checked)
								span.element__subtitle Письменный стол
							li.details__checkbox
								input.checkbox(type="checkbox" checked)
								span.element__subtitle Стул для кормления
							li.details__checkbox
								input.checkbox(type="checkbox" checked)
								span.element__subtitle Кроватка
							li.details__checkbox
								input.checkbox(type="checkbox")
								span.element__subtitle Телевизор
							li.details__checkbox
								input.checkbox(type="checkbox")
								span.element__subtitle Шампунь
							li.details__checkbox
								input.checkbox(type="checkbox")
								span.element__subtitle Телевизор
							li.details__checkbox
								input.checkbox(type="checkbox")
								span.element__subtitle Шампунь
				.feature.feature_smile
					span.feature__title Комфорт
					span.feature__text Шумопоглощающие стены
				.feature.feature_apartment
					span.feature__title Удобство
					span.feature__text Окно в каждой из спален
			.page__block
				.element
					.element__head
						span.element__title dropdown
					.iqdropdown.people.1button
						p.iqdropdown-selection
						.iqdropdown-menu
							.iqdropdown-menu-option(data-id="adults")
								div
									p.iqdropdown-item Взрослые
							.iqdropdown-menu-option(data-id="childs")
								div
									p.iqdropdown-item Дети
							.iqdropdown-menu-option(data-id="babies")
								div
									p.iqdropdown-item Младенцы
				.element
					.element__head
						span.element__title rich checkbox buttons
					.richCheckbox
						input.checkbox(type="checkbox")
						span.element__subtitle.element__subtitle_rich Широкий коридор
							br
							span.element__subtitle.element__subtitle_small Ширина коридоров в номере не менее 91см.
					.richCheckbox
						input.checkbox(type="checkbox")
						span.element__subtitle.element__subtitle_rich Помощник для инвалидов
							br
							span.element__subtitle.element__subtitle_small На 1 этаже вас встретит специалист и проводит до номера.
				.review
					.review__foto
					.review__title
						span.review__person Мурад Сарафанов
						span.review__date 5 дней назад
					.like.review__like
						input.like-input(id="like-3" type="checkbox" checked)
						label.material-icons.like-label(for="like-3")
							span.like-count 12
					p.review__text Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.
			.page__block
				.element
					.element__head
						span.element__title dropdown
					.iqdropdown.people.2buttons
						p.iqdropdown-selection
						.iqdropdown-menu
							.iqdropdown-menu-option(data-id="adults")
