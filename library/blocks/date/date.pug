mixin date(title='',subtitle='',mainClasses='',type)
	if title=="" && subtitle==""
		- mainClasses+=' element_nullgap';
	if type=='double'
		.line
			.element(class=mainClasses)
				span.element__title=title
				.date.textfield.element__body
					input.date__input.datepicker-here(type="text")&attributes(attributes)
					button.date__arrow
			.element(class=mainClasses)
				span.element__title=subtitle
				.date.textfield.element__body
					input.date__input.datepicker-here(type="text")&attributes(attributes)
					button.date__arrow
	if type=='default'
		.element(class=mainClasses)
			span.element__title=title
			span.element__subtitle=subtitle
			.date.textfield.element__body
				input.date__input.datepicker-here(type="text")&attributes(attributes) 
				button.date__arrow