include ../like/like.pug
mixin review(name, date, text, count, liked)
	- var likeClass;
	if liked
		- likeClass='like_liked review__like';
	else
		- likeClass='review__like';
	.review
		img.review__foto(src=attributes.src width="48" height="48")
		.review__title
			span.review__person= name
			span.review__date= date
		+like(count)(id=name class=likeClass)
		p.review__text= text